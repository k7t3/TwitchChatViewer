<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefWidth="200.0" styleClass="chat-room-view" stylesheets="@ChatRoomView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.chat.ChatRoomView">
   <top>
      <GridPane fx:id="headerPane" styleClass="chat-room-header" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="SOMETIMES" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <ImageView fx:id="profileImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </GridPane.margin></ImageView>
            <VBox spacing="1.0" GridPane.columnIndex="1">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="userNameLabel" text="UserName" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <HBox fx:id="stateContainer" alignment="CENTER_LEFT" />
                        <MenuButton fx:id="actionsMenuButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text="MenuButton">
                          <items>
                              <CheckMenuItem mnemonicParsing="false" text="%chat.select" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                            <MenuItem fx:id="popoutMenuItem" mnemonicParsing="false" text="%chat.menu.popout">
                                 <graphic>
                                    <FontIcon iconLiteral="fth-arrow-up-right" />
                                 </graphic>
                              </MenuItem>
                              <SeparatorMenuItem mnemonicParsing="false" />
                            <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="%button.close">
                                 <graphic>
                                    <FontIcon iconLiteral="fth-x" />
                                 </graphic>
                              </MenuItem>
                          </items>
                           <graphic>
                              <FontIcon iconLiteral="fth-more-vertical" />
                           </graphic>
                        </MenuButton>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Hyperlink fx:id="streamInfoLink" text="Streaming" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <ToggleButton fx:id="scrollToEnd" mnemonicParsing="false" text="â†“" underline="true" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </VBox>
         </children>
      </GridPane>
   </top>
   <center>
      <StackPane fx:id="chatDataContainer" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="backgroundImageLayer" opacity="0.2" />
         </children></StackPane>
   </center>
</BorderPane>
