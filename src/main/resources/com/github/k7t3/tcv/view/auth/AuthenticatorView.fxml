<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane styleClass="auth-root" stylesheets="@AuthenticatorView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.auth.AuthenticatorView">
   <center>
      <VBox alignment="CENTER" spacing="4.0" BorderPane.alignment="CENTER">
         <children>
            <FontIcon iconLiteral="fab-twitch" styleClass="twitch-icon" />
            <Hyperlink fx:id="authUriLink" text="Hyperlink">
               <tooltip>
                  <Tooltip text="%auth.tooltip.open" />
               </tooltip></Hyperlink>
            <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="4.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="clipAuthUriButton" mnemonicParsing="false" text="%auth.copy.link" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <top>
      <Label styleClass="auth-header-text" text="%auth.header" BorderPane.alignment="CENTER_LEFT">
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
</BorderPane>
