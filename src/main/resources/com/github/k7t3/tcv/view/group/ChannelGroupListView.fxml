<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.CustomTextField?>
<?import atlantafx.base.controls.Spacer?>
<?import atlantafx.base.controls.ToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="root" prefHeight="400.0" prefWidth="500.0" styleClass="channel-group-list-view" stylesheets="@ChannelGroupListView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.group.ChannelGroupListView">
   <center>
      <StackPane fx:id="channelGroupListContainer" />
   </center>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="4.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="title" text="Channel Groups" />
            <Spacer />
            <ComboBox fx:id="comparatorsComboBox" prefWidth="150.0" />
            <ToggleSwitch fx:id="descendingSwitch" selected="true" text="%group.descending" />
            <CustomTextField fx:id="filterField" prefWidth="200.0" promptText="Filter" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
