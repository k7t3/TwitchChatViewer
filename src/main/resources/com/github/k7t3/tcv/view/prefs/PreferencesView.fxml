<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>


<StackPane id="prefsRootStackPane" fx:id="root" styleClass="preference-view" stylesheets="@PreferencesView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.prefs.PreferencesView">
   <children>
      <BorderPane>
         <center>
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" />
         </center>
         <bottom>
            <ButtonBar fx:id="buttonBar" BorderPane.alignment="CENTER">
               <buttons>
                  <Button fx:id="enterButton" mnemonicParsing="false" text="OK" />
                  <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel" />
                  <Button fx:id="resetButton" mnemonicParsing="false" text="%prefs.button.reset" />
                  <Button fx:id="exportButton" mnemonicParsing="false" text="%prefs.button.export" />
               </buttons>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="2.0" />
               </padding>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
