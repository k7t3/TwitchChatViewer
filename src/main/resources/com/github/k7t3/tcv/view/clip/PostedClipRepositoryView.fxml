<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<SplitPane fx:id="root" dividerPositions="0.5" orientation="VERTICAL" styleClass="video-clip-list-view" stylesheets="@PostedClipRepositoryView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.clip.PostedClipRepositoryView">
   <items>
      <BorderPane>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="title-3" text="%name.clips">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <HBox fx:id="channelOwnersContainer" />
               </children>
            </VBox>
         </top>
         <center>
            <ListView fx:id="videoClips" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <BorderPane>
         <center>
            <ListView fx:id="estimatedClipURLs" />
         </center>
         <top>
            <Label styleClass="title-3" text="%clip.estimate.title" BorderPane.alignment="CENTER">
               <graphic>
                  <FontIcon fx:id="helpIcon" iconLiteral="fth-help-circle" />
               </graphic>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </top>
      </BorderPane>
   </items>
</SplitPane>
