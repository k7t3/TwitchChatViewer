<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.ToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.chat.ChatView">
   <top>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="streamTitleLabel" text="Title" />
            <Pane HBox.hgrow="ALWAYS" />
            <StackPane fx:id="stateContainer" />
            <ToggleSwitch fx:id="autoScroll" text="Auto Scroll" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ListView fx:id="chatDataList" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
