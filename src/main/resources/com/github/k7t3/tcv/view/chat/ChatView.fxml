<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.ToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane stylesheets="@ChatView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.chat.ChatView">
   <top>
      <VBox spacing="1.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="userNameLabel" text="UserName" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <HBox fx:id="stateContainer" alignment="CENTER_LEFT" />
                  <MenuButton fx:id="actionsMenuButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text="MenuButton">
                    <items>
                      <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="%button.close">
                           <graphic>
                              <FontIcon iconLiteral="fth-x" />
                           </graphic>
                        </MenuItem>
                      <MenuItem fx:id="popoutMenuItem" mnemonicParsing="false" text="%chat.menu.popout">
                           <graphic>
                              <FontIcon iconLiteral="fth-arrow-up-right" />
                           </graphic>
                        </MenuItem>
                    </items>
                     <graphic>
                        <FontIcon iconLiteral="fth-more-vertical" />
                     </graphic>
                  </MenuButton>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Hyperlink fx:id="streamInfoLink" text="Streaming" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <ToggleSwitch fx:id="autoScroll" text="%auto.scroll" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <StackPane fx:id="chatDataContainer" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
