<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.ToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@ChatView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.k7t3.tcv.view.chat.ChatView">
   <top>
      <VBox spacing="1.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="userNameLabel" text="UserName" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <HBox fx:id="stateContainer" alignment="CENTER_LEFT" />
                  <Button fx:id="closeButton" mnemonicParsing="false" text="%button.close" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Hyperlink fx:id="streamInfoLink" text="Streaming" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <ToggleSwitch fx:id="autoScroll" text="%auto.scroll" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ListView fx:id="chatDataList" styleClass="chat-data-list-view" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
